<div
  class="modal fade"
  id="ticketInfoModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg ticket-info">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Phiếu Check in</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
        
      </div>
      <div class="modal-header">
        <div class="row">
          <span class="col-md-6 fs-5 d-block " >Phòng:  <span class="ticket-room"></span> </span>
          <span class="col-md-6 fs-5 d-block " >CheckIn: <span class="ticket-checkIn"></span>  </span>
          <span class="col-md-6 fs-5 d-block " >Mã phiếu: <span class="ticket-id"></span>  </span>
          <span class="col-md-6 fs-5 d-block " >CheckOut: <span class="ticket-checkOut"></span>  </span>
          <span class="col-md-6 fs-5 d-block " >Số lượng khách: <span class="ticket-num"></span>  </span>
        </div>
      </div>
      <div class="modal-body">
          <div id="updateTicketInfoForm">
              
              <div id="carouselExampleIndicators" class="carousel carousel-dark slide z-3">
                  <div class="carousel-inner ticket-users">
                  </div>
                  <div class="carousel-indicators accommodation-indicators">
                  </div>
              </div>
          </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
        <button type="button" class="btn btn-primary checkInBtn">Check In</button>
      </div>
    </div>
  </div>
</div>
<div class="container">
  
  <h1>This is room booking</h1>
  {{> BookingTable tickets=tickets status="all"}}

</div>