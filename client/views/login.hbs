<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="container h-100 d-flex align-items-center">
        <div class="row justify-content-center">
          <div class="col-md-9">
            {{! Tab }}
            <ul
              class="nav nav-tabs nav-justified mb-3"
              id="ex-with-icons"
              role="tablist"
            >
              <li class="nav-item" role="presentation">
                <a
                  class="nav-link active"
                  id="ex-with-icons-tab-1"
                  data-bs-toggle="tab"
                  href="#ex-with-icons-tabs-1"
                  role="tab"
                  aria-controls="ex-with-icons-tabs-1"
                  aria-selected="true"
                ><i class="fas fa-circle-user fa-fw me-2"></i>User</a>
              </li>
              <li class="nav-item" role="presentation">
                <a
                  class="nav-link"
                  id="ex-with-icons-tab-2"
                  data-bs-toggle="tab"
                  href="#ex-with-icons-tabs-2"
                  role="tab"
                  aria-controls="ex-with-icons-tabs-2"
                  aria-selected="false"
                ><i
                    class="fas fa-chalkboard-user fa-fw me-2"
                  ></i>Administrator</a>
              </li>
            </ul>

            {{! Tab content }}

            <div class="tab-content" id="ex-with-icons-content">
              <div
                class="tab-pane fade show active"
                id="ex-with-icons-tabs-1"
                role="tabpanel"
                aria-labelledby="ex-with-icons-tab-1"
              >
                <div class="container p-3 border border-3">
                  <span class="fs-1">Đăng nhập vào
                    <span class="fw-bold">MyHotel</span>
                  </span>
                  <br />
                  <span class="fst-italic d-block mb-2">Lorem ipsum dolor sit
                    amet elit. Sapiente sit aut eos consectetur adipisicing.</span>
                  <form action="/auth/login" method="post">
                    <label for="username">Tên tài khoản</label>
                    <div class="input-group col-lg-6 mb-2">
                      <div class="input-group-prepend">
                        <span
                          class="input-group-text border border-3 bg-white px-4 rounded-0 border-end-0"
                        >
                          <div class="py-2">
                            <i class="fa fa-user text-muted"></i>
                          </div>
                        </span>
                      </div>
                      <input
                        id="username"
                        type="text"
                        name="username"
                        value="testAccount1"
                        placeholder="Tên tài khoản"
                        class="form-control border border-3 bg-white border-start-0"
                      />
                    </div>

                    <!-- Password -->
                    <label for="password">Mật khẩu</label>
                    <div class="input-group col-lg-6 mb-2">
                      <div class="input-group-prepend">
                        <span
                          class="input-group-text border border-3 bg-white px-4 border-md border-end-0"
                        >
                          <div class="py-2">
                            <i class="fa fa-lock text-muted"></i>
                          </div>
                        </span>
                      </div>
                      <input
                        id="password"
                        type="password"
                        name="password"
                        value="123456"
                        placeholder="Mật khẩu"
                        class="form-control border border-3 bg-white border-start-0 border-md"
                      />
                    </div>
                    {{#if error}}
                      <span class="text-danger">{{message}}</span>
                    {{/if}}
                    <div class="d-grid">
                      <input
                        type="submit"
                        value="Log In"
                        class="btn btn-primary"
                      />
                    </div>
                  </form>
                  <div class="text-center w-100 mt-2">
                    <p class="text-muted font-weight-bold">Do not have an
                      account ?
                      <a
                        href="/auth/register"
                        class="text-primary ml-2"
                      >Register</a></p>
                  </div>
                </div>
              </div>
              <div
                class="tab-pane fade"
                id="ex-with-icons-tabs-2"
                role="tabpanel"
                aria-labelledby="ex-with-icons-tab-2"
              >
                <div class="container p-3 border border-3">
                  <span class="fs-1">Đăng nhập vào
                    <span class="fw-bold">MyHotel</span>

                  </span>
                  <br />
                  <span class="fst-italic d-block mb-2">theo admin Lorem ipsum
                    dolor sit amet elit. Sapiente sit aut eos consectetur
                    adipisicing.</span>
                  <form action="/auth/loginAdmin" method="post">
                    <label for="usernameAdmin">Tên tài khoản</label>
                    <div class="input-group col-lg-6 mb-2">
                      <div class="input-group-prepend">
                        <span
                          class="input-group-text border border-3 bg-white px-4 rounded-0 border-end-0"
                        >
                          <div class="py-2">
                            <i class="fa fa-user text-muted"></i>
                          </div>
                        </span>
                      </div>
                      <input
                        id="usernameAdmin"
                        type="text"
                        name="usernameAdmin"
                        value="admin"
                        placeholder="taikhoan123"
                        class="form-control border border-3 bg-white border-start-0"
                      />
                    </div>

                    <!-- Password -->
                    <label for="passwordAdmin">Mật khẩu</label>
                    <div class="input-group col-lg-6 mb-2">
                      <div class="input-group-prepend">
                        <span
                          class="input-group-text border border-3 bg-white px-4 border-md border-end-0"
                        >
                          <div class="py-2">
                            <i class="fa fa-lock text-muted"></i>
                          </div>
                        </span>
                      </div>
                      <input
                        id="passwordAdmin"
                        type="password"
                        name="passwordAdmin"
                        value="admin123"
                        placeholder="Mật khẩu"
                        class="form-control border border-3 bg-white border-start-0 border-md"
                      />
                    </div>
                    <div class="d-grid">
                      <input
                        type="submit"
                        value="Log In"
                        class="btn btn-primary"
                      />
                    </div>
                  </form>
                </div>
              </div>
            </div>

            {{! content below }}

          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <img class="login__img" src="/public/image/login.jpg" alt="hotel" />
    </div>
  </div>
</div>