<form action="/api/transactions/{{sender}}" method="post" class="m-5">
  <!-- Email input -->
  <h1>Create new OFP for account: {{sender}}</h1>
  <div class="form-outline mb-4">
    <label class="form-label" for="receiver">Receiver</label>
    <input type="number" id="receiver" class="form-control" name="receiver" />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="amount">Amount</label>
    <input type="number" id="amount" class="form-control" name="amount" />
  </div>
  <span>{{message}}</span>
  <!-- Submit button -->
  <div class="col-md-12 d-flex justify-content-center">
    <!-- Simple link -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
  </div>
</form>