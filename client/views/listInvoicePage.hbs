<link rel="stylesheet" href="../public/css/style_listInvoice.css"/>
<div class="container">
    <div class="records-container">
        <h3>
            HÓA ĐƠN THANH TOÁN
        </h3>
        <div class="input-group receipt-search">
            <input type="search" placeholder="Tìm kiếm đơn theo mã" aria-describedby="button-addon1"
                class="rounded rounded-pill form-control border-0 bg-light" id="search-rec-id" value="">
            <div class="input-group-append">
                <button id="search-receipt-btn" type="button" class="btn btn-link text-primary"><i
                        class="fa fa-search"></i></button>
            </div>
        </div>
        <div class="accordion">
            {{#each listInvoice}}
            {{index}}
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <div class="form-control detailInvoice" type="button" value="{{this.MAHOADON}}">
                        <div class="card-header-custom">
                            <div class="title-custom time-column">{{this.NGAYTHANHTOAN}}
                            </div>
                            <div class="title-custom receipt-id-column">ID: {{this.MAHOADON}}</div>
                            <div class="title-custom">Mã khách hàng thanh toán: {{this.MAKHTHANHTOAN}}</div>
                            <div class="title-custom">Tổng tiền: {{this.TONGTIEN}}</div>
                        </div>
                    </div>
                </h2>
            </div>
            {{/each}}
        </div>
        {{!--
        <nav class="pagination-div" aria-label="Page navigation example">
            <ul class="pagination">
                {{#times totalPage}}
                <li class="page-item page-number {{#ifCond  ../currentPage  '==' this }}active{{/ifCond}}">
                    <a class="page-link" href="?page={{this}}">{{this}}</a>
                </li>
                {{/times}}
            </ul>
        </nav>--}}
    </div>

</div>
<script src="../public/script/script_listInvoice.js"></script>