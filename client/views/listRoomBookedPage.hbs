<div class="d-flex flex-column jusify-content-center align-items-center p-3">
    <table class="table table-striped table-border w-75">
        <thead class="table-dark">
            <tr>
                <th scope="col">Mã đặt phòng</th>
                <th scope="col">Ngày đặt</th>
                <th scope="col">Ngày checkin</th>
                <th scope="col">Ngày checkout</th>
                <th scope="col">Số lượng khách</th>
                <th scope="col">Tổng tiền</th>
            </tr>
        </thead>
        <tbody id="listRoomBooked">
            {{#each listTicket}}
            <tr class="">
                <th rowspan="2" scope="row" class="align-middle text-center">{{MADATPHONG}}</th>
                <td>{{NGAYDATPHONG}}</td>
                <td>{{NGAYCHECKIN}}</td>
                <td>{{NGAYCHECKOUT}}</td>
                <td class="text-center">{{SLKHACH}}</td>
                <td>$ xxx,xxx</td>
            </tr>
            <tr class="" id="{{MADATPHONG}}">
                <td colspan="12" class="m-0 p-0">
                    <table class="table table-light table-bordered m-auto">
                        <thead class="">
                            <tr>
                                <th scope="col">Phòng</th>
                                <th scope="col">Tầng</th>
                                <th scope="col">Loại phòng</th>
                                <th scope="col">Số giường</th>
                                <th scope="col">Số khách tối đa</th>
                                <th scope="col">Đơn giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each ROOM}}
                            <tr>
                                <td>{{this.MAPHONG}}</td>
                                <td>{{this.TANG}}</td>
                                <td>{{this.TENLOAI}}</td>
                                <td>{{this.SOGIUONG}}</td>
                                <td>{{this.SOKHACHTOIDA}}</td>
                                <td>{{this.DONGIA}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="12"></td>
            </tr>
            <tr>
                <td colspan="12"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script src="../public/script/script_listRoomBooked.js"></script>