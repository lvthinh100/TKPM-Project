<link rel="stylesheet" href="/public/css/style_announcement.css" />

<div class="pop-up hidden">
  <div class="popup-container">
    <div class="notification">
      <div class="noti-header">
        <i class="fas fa-window-close"></i>
      </div>
      <div class="noti-content-container">
        <div class="noti-content">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="d-flex flex-column jusify-content-center align-items-center p-3">
  <table class="table table-striped table-border w-75">
    <thead class="table-dark">
      <tr>
        <th scope="col">Mã đặt phòng</th>
        <th scope="col">Ngày đặt</th>
        <th scope="col">Ngày checkin</th>
        <th scope="col">Ngày checkout</th>
        <th scope="col">Số lượng khách</th>
        <th scope="col">Tổng tiền</th>
      </tr>
    </thead>
    <tbody id="listRoomBooked">
      {{#each listTicket}}
        <tr class="">
          <th rowspan="2" scope="row" class="align-middle text-center">
            <div
              class="col-12 idBooking"
              id="{{MADATPHONG}}"
              style="font-size:1.25em"
            >{{MADATPHONG}}</div>
            <div
              class="col-12"
              style="margin-top:1em; color:rgb(30, 30, 218)"
            >Trạng thái: {{TRANGTHAI}}</div>
            <div
              class="col-lg-9 align-middle text-center"
              style="margin-top:1em;"
            >
              <button
                data-id="{{MADATPHONG}}"
                class="btn w-100 cancel-booking-btn"
                style="background-color: rgb(237, 75, 75);"
              >Hủy đặt phòng</button>
            </div>
          </th>
          <td>{{formatFUllDate NGAYDATPHONG}}</td>
          <td>{{formatFUllDate NGAYCHECKIN}}</td>
          <td>{{formatFUllDate NGAYCHECKOUT}}</td>
          <td class="text-center">{{SLKHACH}}</td>
          <td>$ xxx,xxx</td>
        </tr>
        <tr class="" id="{{ticketid}}">
          <td colspan="12" class="m-0 p-0">
            <table class="table table-light table-bordered m-auto">
              <thead class="">
                <tr>
                  <th scope="col">Phòng</th>
                  <th scope="col">Tầng</th>
                  <th scope="col">Loại phòng</th>
                  <th scope="col">Số giường</th>
                  <th scope="col">Số khách tối đa</th>
                  <th scope="col">Đơn giá</th>
                </tr>
              </thead>
              <tbody>
                {{#each ROOM}}
                  <tr>
                    <td>{{this.MAPHONG}}</td>
                    <td>{{this.TANG}}</td>
                    <td>{{this.TENLOAI}}</td>
                    <td>{{this.SOGIUONG}}</td>
                    <td>{{this.SOKHACHTOIDA}}</td>
                    <td>{{formatCurrency this.DONGIA}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </td>
        </tr>
        <tr>
          <td colspan="12"></td>
        </tr>
        <tr>
          <td colspan="12"></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script src="../public/script/script_announcement.js"></script>
<script src="../public/script/script_listRoomBooked.js"></script>