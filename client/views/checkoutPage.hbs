<div class="d-flex flex-column jusify-content-center align-items-center p-3">
  <div class="container border border-secondary card shadow m-3 p-4 w-50">
    <div class="row h2 mb-3 text-primary justify-content-center fw-bold">
      THÔNG TIN PHIẾU ĐẶT PHÒNG
    </div>
    <div class="row justify-content-center" id="">
      <div class="col">Mã đặt phòng:</div>
      <div class="col fst-italic quantity-pro ticket-id">--------</div>
      <div class="col">Ngày đặt phòng:</div>
      <div class="col fst-italic quantity-pro" id="currentDate">2000/01/01</div>
    </div>

    <hr />

    <div class="row" id="">
      <div class="col">Mã khách hàng:</div>
      <div class="col user-id">{{user.userId}}</div>
      <div class="col">Số lượng khách: </div>
      <div class="col" id="numUser"></div>
    </div>
    <div class="row" id="">
      <div class="col">Ngày Check-in:</div>
      <div class="col" id="checkinDate">1999/01/01</div>
      <div class="col">Ngày Check-out:</div>
      <div class="col" id="checkoutDate">1999/01/01</div>
    </div>

    <hr />

    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">Phòng</th>
          <th scope="col">Tầng</th>
          <th scope="col">Loại Phòng</th>
          <th scope="col">Số giường</th>
          <th scope="col">Số khách tối đa</th>
          <th scope="col">Chi phí</th>
        </tr>
      </thead>
      <tbody id="listRoomBooked">
        {{#each listRoom}}
        <tr id="{{this.MAPHONG}}">
          <td class="room-id">{{this.MAPHONG}}</td>
          <td>{{this.TANG}}</td>
          <td>{{this.TENLOAI}}</td>
          <td>{{this.SOGIUONG}}</td>
          <td>{{this.SOKHACHTOIDA}}</td>
          <td class="text-end">{{formatCurrency this.DONGIA}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <hr />

    <div class="row h4 justify-content-center">
      <div class="col text-center" id="total"> Tổng chi phí: $00210 </div>
    </div>

    <div class="row justify-content-center">
      <button class="btn btn-outline-danger w-25 cancel-booking" href="/listRoomForGuess">Hủy</button>
      <button type="button" class="btn btn-outline-success w-25 book-ticket" data-toggle="modal"
        data-target="#sucessModal">Xác nhận</button>
    </div>
  </div>
</div>



{{> SucessModal}}
{{> GuessModal}}

<script src="../public/script/script_checkout.js"></script>