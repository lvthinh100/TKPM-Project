<div class="container card p-3 my-4 w-75 shadow-sm" action="" method="" id="">
    <div class="row align-items-end justify-content-end">
        <!-- Check-in input -->
        <div class="col-12 col-md-6 col-lg-2 form-outline">
            <label class="form-label" for="checkinDate">Ngày check-in</label>
            <input class="form-control" type="date" id="checkinDate" name="checkin" value="2022-01-01" />
        </div>

        <!-- Check-out input -->
        <div class="col-12 col-md-6 col-lg-2 form-outline">
            <label class="col form-label" for="checkoutDate">Ngày check-out</label>
            <input class="col form-control" type="date" id="checkoutDate" name="checkout" value="" />
        </div>

        <!-- Số giường input -->
        <div class="col-12 col-sm-6 col-lg form-outline">
            <label class="form-label">Số giường: </label>
            <div class="d-flex">
                <input class="form-control" type="number" name="minBed" id="minBed" placeholder="Từ" min="0" max="5"
                    onkeyup="checkCondition()" onclick="checkCondition()" />
                <div class="p-2"> - </div>
                <input class="form-control" type="number" name="maxBed" id="maxBed" placeholder="Đến" min="0" max="5"
                    onkeyup="checkCondition()" onclick="checkCondition()" />
            </div>


        </div>

        <!-- Số khách tối đa input -->
        <div class="col-12 col-sm-6 col-lg form-outline">
            <label class="form-label">Số khách tối đa: </label>
            <div class="d-flex">
                <input class="form-control" type="number" name="minGuess" id="minGuess" placeholder="Từ" min="0"
                    max="10" onkeyup="checkCondition()" onclick="checkCondition()" />
                <div class="p-2"> - </div>
                <input class="form-control" type="number" name="maxGuess" id="maxGuess" placeholder="Đến" min="0"
                    max="10" onkeyup="checkCondition()" onclick="checkCondition()" />
            </div>
        </div>
    </div>
